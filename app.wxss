/**app.wxss**/
@import "icon.wxss";

@font-face{font-family:Muiicons;font-weight:400;font-style:normal;src:url(fonts/mui.ttf) format('truetype')}
page{
    background: white;
    font-family:"iconfont";
      height: 100%;
}
.flex{
    display: flex;
}
.column{
    flex-direction: column;
}
.row{
    flex-direction: row;
}
.arrows{
    position: relative;
}
.arrows:after{
    position: absolute;
    right:15px;
    top:50%;
    margin-top:-3px;
    content: "";
    display: inline-block;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #c8c8cd;
    border-style: solid;
    margin-left: .3em;
}


view,text{
  box-sizing: border-box;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

page .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: -35rpx;
}

page .wx-swiper-dot{
    width: 100rpx;
    display: inline-flex;
    height: 20rpx;
    vertical-align: sub;
}



page .wx-swiper-dot::before{
    content: '';
    background: white;
    flex-grow: 1;
}

page .wx-swiper-dot-active::before{
    content: '';
    background: pink;
    flex-grow: 1;
}